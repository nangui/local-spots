# ========================================
# Application Configuration
# ========================================

# Environment: development, staging, production
NODE_ENV=development

# Application
HOST=0.0.0.0
PORT=3333

# Security - Generate with: node ace generate:key
APP_KEY=

# Application URL (used for emails, webhooks, etc.)
APP_URL=http://localhost:3333

# ========================================
# Database Configuration
# ========================================

# Database connection type
DB_CONNECTION=pg

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_DATABASE=local_spots

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========================================
# Authentication & Security
# ========================================

# Session Configuration
SESSION_DRIVER=cookie
SESSION_COOKIE_NAME=local-spots-session

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ========================================
# Mail Configuration (Optional)
# ========================================

# Mail Driver: smtp, ses, mailgun, sparkpost, log
MAIL_DRIVER=smtp

# SMTP Configuration
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Mail From
MAIL_FROM_ADDRESS=noreply@localspots.com
MAIL_FROM_NAME="Local Spots"

# ========================================
# Storage Configuration (Optional)
# ========================================

# Storage Driver: local, s3
STORAGE_DRIVER=local

# S3 Configuration (if using S3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# ========================================
# External Services (Optional)
# ========================================

# Google Maps API (for geocoding)
GOOGLE_MAPS_API_KEY=

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Redis (for caching/sessions)
REDIS_CONNECTION=local
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# Social Authentication (Optional)
# ========================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3333/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3333/auth/facebook/callback

# ========================================
# Development Tools
# ========================================

# Debug Mode
DEBUG=true

# Logger Level: debug, info, warn, error
LOG_LEVEL=debug

# Pretty Logs (for development)
LOG_PRETTY=true

# ========================================
# Queue Configuration (Optional)
# ========================================

# Queue Driver: sync, redis, database
QUEUE_DRIVER=sync

# ========================================
# Analytics (Optional)
# ========================================

# Google Analytics
GA_TRACKING_ID=

# Mixpanel
MIXPANEL_TOKEN=

# ========================================
# Feature Flags
# ========================================

# Enable/Disable Features
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_DOCS=true

# ========================================
# Limits & Constraints
# ========================================

# Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# User Limits
MAX_SPOTS_PER_USER=100
MAX_REVIEWS_PER_USER=500
MAX_FAVORITES_PER_USER=200

# ========================================
# Maintenance Mode
# ========================================

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing maintenance. Please check back soon!"
MAINTENANCE_ALLOWED_IPS=127.0.0.1

# ========================================
# Testing
# ========================================

# Test Database (for running tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=
TEST_DB_DATABASE=local_spots_test
LIMITER_STORE=database
DRIVE_DISK=fs